<Window x:Class="WordSearch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WordSearch"
        mc:Ignorable="d"
        Title="WordSearch" Height="450" Width="800">
    <Grid Background="#FFB4FF00">
        <TextBlock Margin="10,46,0,338">Enter characters into text box:</TextBlock>
        <TextBox x:Name="InputTextBox" Margin="190,46,453,343" KeyDown="InputTextBoxListener"></TextBox>
        <DataGrid AutoGenerateColumns="True" Name="ResultsGrid" Margin="0,87,-0.4,99" />
        <TextBlock x:Name="StatusBlock" Margin="551,33,38,343">Status: Awaiting Action</TextBlock>
        <Button Click="ComputeListener" Margin="333,348,332.6,0">Compute</Button>
    </Grid>
</Window>
